<%- include("partials/head", { title }) %>

<section class="hero">
  <h1>Nick Deno</h1>
  <p class="sub">Aspiring IT Professional • Systems • Networking • SQL</p>
  <div class="cta">
    <a class="btn" href="/projects">View Projects</a>
    <a class="btn" href="/skills">View Skills</a>
    <a class="btn ghost" href="/contact">Contact</a>
  </div>
</section>

<section class="card">
  <h2>Featured Project</h2>

  <div class="grid">
    <% projects.forEach(p => { %>
      <div class="tile">
        <h3><%= p.title %></h3>
        <p><%= p.description %></p>
        <p class="tags">
          <% (p.stack || []).forEach(s => { %>
            <span><%= s %></span>
          <% }) %>
        </p>
        <% if (p.slug) { %>
          <a href="/projects/<%= encodeURIComponent(p.slug) %>">View details →</a>
        <% } else { %>
          <a href="<%= p.link %>" target="_blank" rel="noreferrer">View Repo →</a>
        <% } %>
      </div>
    <% }) %>
  </div>
</section>

<%- include("partials/foot") %>
