<%- include("layout", { title, body: `
  <section class="hero">
    <h1>Nick Deno</h1>
    <p class="sub">Aspiring IT Professional - Systems - Networking - SQL</p>
    <div class="cta">
      <a class="btn" href="/projects">View Projects</a>
      <a class="btn ghost" href="/contact">Contact</a>
    </div>
  </section>

  <section class="card">
